<script>
    function toggleFooterDetails() {
        const footer = document.getElementById("footerDetails");
        const toggle = document.querySelector(".footer-toggle");
        if (footer.style.display === "block") {
            footer.style.display = "none";
            toggle.textContent = "▲";
        } else {
            footer.style.display = "block";
            toggle.textContent = "▼";
        }
    }
</script>
