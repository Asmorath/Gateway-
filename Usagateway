<script>
const proceedBtn = document.getElementById('proceedButton');
const retryBtn = document.getElementById('retryButton');
const statusEl = document.getElementById('statusMessage');
const ipDetailsEl = document.getElementById('ipDetails');

proceedBtn.addEventListener('click', checkLocation);
retryBtn.addEventListener('click', checkLocation);

async function checkLocation() {
    statusEl.textContent = "Verifying VPN location...";
    ipDetailsEl.textContent = "";
    retryBtn.style.display = "none";

    try {
        const res = await fetch('https://ipapi.co/json/');
        const data = await res.json();

        ipDetailsEl.textContent = `IP: ${data.ip} • Location: ${data.city}, ${data.region}, ${data.country_name}`;

        if (data.country_name === "Mexico") {
            statusEl.textContent = "✅ Verified! Redirecting...";
            window.location.href = 'https://dimebit.com/ref/fb777';
        } else {
            statusEl.textContent = "❌ VPN is not connected to Mexico. Please try again.";
            retryBtn.style.display = "inline-block";
        }
    } catch (error) {
        statusEl.textContent = "⚠️ Error verifying location. Please check your VPN and try again.";
        retryBtn.style.display = "inline-block";
    }
}
</script>
